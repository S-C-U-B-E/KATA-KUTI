<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="Music">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="music"
            android:summaryOff="Tap to turn on music"
            android:summaryOn="Tap to turn off music"
            android:title="Background Music"
            android:icon="@drawable/ic_volume_up" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="applause"
            android:summaryOff="Tap to get applause"
            android:summaryOn="Everyone loves an applause.. tap if you don't"
            android:title="Applause"
            android:icon="@drawable/ic_applause_up"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="Notification">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="notification"
            android:summaryOff="Notification turned Off"
            android:summaryOn="Notification turned On"
            android:title="Match In Progress"
            android:icon="@drawable/ic_notifications_active"/>

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="vibration"
            android:summaryOn="Vibration turned On"
            android:summaryOff="Vibration turned Off"
            android:title="Vibration"
            android:icon="@drawable/ic_notification_vibration"/>

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="sound"
            android:summaryOn="Notification sound turned On"
            android:summaryOff="Notification sound turned Off"
            android:title="Sound"
            android:icon="@drawable/ic_notification_sound"/>

    </PreferenceCategory>

</PreferenceScreen>